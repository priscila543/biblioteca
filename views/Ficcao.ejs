<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Ficção</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <h1 class="text-center mb-4">Ficção Científica</h1>

  <div class="row g-4">
    <% livros.forEach(l => { %>
      <div class="col-md-3 col-sm-6">
        <div class="card">
          <img src="<%= l.capa %>" class="card-img-top">
          <div class="card-body">
            <h5><%= l.nome %></h5>
            <p class="text-muted"><%= l.autor %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
