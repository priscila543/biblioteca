<%
let corFundo = "#f8f9fa"; 
let corBotao = "secondary";

if (categoria === "Romance") {
  corFundo = "#b23a48"; 
}

if (categoria === "Ficção Científica") {
  corFundo = "#3f6fa0"; 
}

if (categoria === "Infantil") {
  corFundo = "#f4b860"; 
}

if (categoria === "Resultado da Busca") {
  corFundo = "#ad7b4f";
}
%>

<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title><%= categoria %> - Livros</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

<body style="background-color: <%= corFundo %>;">

  <div class="container py-4">

    <a href="/inicio" class="btn btn-secondary mb-3">← Voltar</a>

    <h2 style="color: black;" class="mb-4 text-center"><%= categoria %></h2>

    <div class="row g-3">

      <% if (livros.length === 0) { %>
        <p class="text-center">Nenhum livro encontrado nesta categoria.</p>
      <% } %>

      <% livros.forEach(livro => { %>
        <div class="col-md-3 col-sm-6">
          <div class="card h-100 shadow-sm">
            <img 
              src="<%= livro.capa %>" 
              class="card-img-top" 
              style="height:250px; object-fit:cover;"
            >

            <div class="card-body text-center">
              <h5 class="card-title"><%= livro.nome %></h5>

              <p class="card-text">
                <strong>Autor:</strong> <%= livro.autor %>
              </p>

              <a href="/livros/<%= livro.id %>" class="btn btn-dark w-100">
                Ver Detalhes
              </a>
            </div>
          </div>
        </div>
      <% }) %>

    </div>

  </div>

</body>
</html>
